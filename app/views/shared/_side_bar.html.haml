.chat-side
  .side-bar
    .side-bar__box
      %p.side-bar__box__user-name
        = current_user.name
      %ul.side-bar__box__icon
        %li.side-bar__box__icon__new-group
          =link_to "#" do
            =icon('fas', 'edit', class: 'icon')
        %li.side-bar__box__icon__edit-user
          = link_to edit_user_path(current_user) do
            =icon('fas', 'cog', class: 'icon')
  .groups
    =link_to "#", class: "group" do
      %p.group__group-name
        aaa
      %p.group__latest-message
        hello